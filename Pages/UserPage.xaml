<Page x:Class="Taxi.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Taxi.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage">

    <StackPanel>
        <Image Source="/Images/Map.png" Height="200"/>
        <Label Content="Откуда"/>
        <TextBox x:Name="FromBox"/>
        <Label Content="Куда"/>
        <TextBox x:Name="ToBox"/>
        <Label Content="Класс"/>
        <ComboBox x:Name="ClassBox">
            <ComboBoxItem Content="Эконом" />
            <ComboBoxItem Content="Бизнес"/>
            <ComboBoxItem Content="Комфорт"/>
        </ComboBox>
        <Button Content="Заказать" Click="Button_Click"/>
        <Button Content="朽打" x:Name="ExitBTN" Click="ExitBTN_Click"/>
    </StackPanel>
</Page>
